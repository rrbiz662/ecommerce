pipeline {
    agent {
        docker {
            image 'maven'
            args '--volume /root/.m2:/root/.m2'
        }
    }

    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker build --tag my-app .'
                sh 'docker run --detach --rm --publish 8080:8080 my-app'
            }
        }
    }
}