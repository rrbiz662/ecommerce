pipeline {
    agent none

    stages {
        stage('Compile') {
            agent {
                docker {
                    image 'maven'
                    args '--volume /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'maven'
                    args '--volume /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
            agent {
                docker {
                    image 'maven'
                    args '--volume /root/.m2:/root/.m2'
                }
            }
            steps {
                echo 'package...'
                /*
                sh 'mvn package'
                */
            }
        }
        /*
        stage('Deploy') {
            agent {
                dockerfile {
                    args '--publish 8080:8080 --detach -- rm'
                    filename 'Dockerfile'
                }
            }
            steps {
                echo 'Application successfully  deployed.'
            }
        }
        */
    }
}