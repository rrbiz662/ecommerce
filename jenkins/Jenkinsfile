pipeline {
    agent none

    stages {
        stage('Compile') {
            agent {
                docker {
                    image 'maven'
                    args '--volume /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'maven'
                    args '--volume /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit '/target/surefire-reports/*.xml'
                }
            }
        }
    }
}